{
    "app-id": "lol.janjic.battmon",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "python3",
    "modules": [
        {
            "name": "battmon",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=/app python-deps/",
                "pip3 install --prefix=/app -r requirements.txt"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "battmon.py"
                }
            ]
        }
    ]
}
